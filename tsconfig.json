{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "strict": true,
    "esModuleInterop": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
